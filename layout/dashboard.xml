<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9c7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:hint="What to Cook?"
        android:textColorHint="#8E1616"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"> </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search..."
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:paddingLeft="12dp"
        android:height="40sp"
        android:elevation="5dp"
        android:background="@drawable/edittextdashboard"> </EditText>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#8E1616">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:background="@drawable/frameradius"
            android:layout_gravity="center_horizontal"
            android:elevation="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#66E6E6E6"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:padding="4dp">

                <ImageView
                    android:layout_width="313dp"
                    android:layout_height="186dp"
                    android:src="@drawable/dynamite" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:hint="Dynamite"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:textSize="23sp"> </TextView>

            <Button
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="280dp"
                android:layout_marginHorizontal="20dp"
                android:background="#8E1616"
                android:hint="COOK!"
                android:elevation="15dp"
                android:textColorHint="@color/white"> </Button>
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:hint="________________________________________"
            android:textColorHint="#809E9E9E"
            android:textSize="23sp"> </TextView>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:background="@drawable/frameradius"
            android:layout_gravity="center_horizontal"
            android:elevation="15dp"
            android:layout_marginTop="420dp"
            android:layout_marginHorizontal="20dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#66E6E6E6"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:padding="4dp">

                <ImageView
                    android:layout_width="309dp"
                    android:layout_height="186dp"
                    android:src="@drawable/dumpling" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
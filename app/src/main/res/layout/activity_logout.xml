<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogoutActivity"
    android:orientation="vertical"
    android:background="#AAB99A"
    android:padding="24dp">

    <!-- Header section -->
    <TextView
        android:id="@+id/logout_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="LOGOUT"
        android:textColor="#2C3930"
        android:textSize="28sp"
        android:textStyle="bold" />

    <View
        android:layout_width="80dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="40dp"
        android:background="#2C3930" />

    <!-- User Info Box -->
    <LinearLayout
        android:id="@+id/currentlyloggedin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frameradius"
        android:padding="20dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profpic"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/profile"
                android:background="@drawable/circleimage"
                android:clipToOutline="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You are currently logged in as:"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="kur0_m1@gmail.com"
                    android:textColor="#2C3930"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Confirmation Box -->
    <LinearLayout
        android:id="@+id/areyousure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frameradius"
        android:padding="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want to log out?"
            android:textColor="#2C3930"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="You will need to enter your credentials to access your account again."
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Buttons -->
    <Button
        android:id="@+id/signout_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#2C3930"
        android:text="SIGN OUT"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="#802C3930"
        android:text="CANCEL"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/accountsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:text="Account Settings"
        android:textColor="#2C3930"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>
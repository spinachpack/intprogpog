<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="#AAB99A">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/register_back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:padding="12dp"
                    android:src="@drawable/backbutton"
                    android:scaleType="centerCrop"
                    android:scaleY="1.5"
                    android:scaleX="1.5"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:hint="Create your Account"
                android:textColorHint="#2C3930"
                android:textSize="35sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="45dp"
                android:hint="Firstname"
                android:fontFamily="sans-serif-medium"
                android:textColor="#2C3930"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/et_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="italic"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:height="40sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:hint="Lastname"
                android:fontFamily="sans-serif-medium"
                android:textColor="#2C3930"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/et_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="italic"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="2dp"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:height="40sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:hint="Email"
                android:fontFamily="sans-serif-medium"
                android:textColor="#2C3930"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="2dp"
                android:height="40sp"
                android:background="@drawable/edittext"
                android:textSize="20sp"
                android:elevation="5dp"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="#2C3930"
                android:textSize="13sp"
                android:textStyle="italic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:hint="Password"
                android:fontFamily="sans-serif-medium"
                android:textColor="#2C3930"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/et_registerpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:paddingHorizontal="2dp"
                android:layout_marginTop="5dp"
                android:height="40sp"
                android:background="@drawable/edittext"
                android:elevation="5dp"
                android:textSize="20sp"
                android:textStyle="italic"
                android:inputType="textPassword"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="20dp"
                android:hint="(Password must be at least 8 characters long and include a mix of letters, numbers, and special characters.)"
                android:fontFamily="sans-serif-medium"
                android:textColor="#2C3930"
                android:textSize="13sp"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="40dp"
                android:background="#2C3930"
                android:hint="REGISTER"
                android:textStyle="bold"
                android:elevation="15dp"
                android:textColorHint="@color/white"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
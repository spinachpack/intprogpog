<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAB99A"
    android:orientation="vertical">

    <!-- Header  -->
    <LinearLayout
        android:id="@+id/headerbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2C3930"
        android:elevation="5dp"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/dev_team_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:text="THE CREATORS"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold" />

        <View
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="#AAB99A" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:gravity="center"
            android:text="The minds behind PowerPause"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Developers List -->
    <ScrollView
        android:id="@+id/scrollviewdev"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingTop="24dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="25dp"
            android:paddingBottom="24dp">

            <!-- Developer 1 -->
            <LinearLayout
                android:id="@+id/devone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/frameradius"
                android:elevation="4dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#2C3930" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Profile Image with better spacing -->
                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:background="@drawable/circleimage"
                            android:clipToOutline="true"
                            android:src="@drawable/devpfp" />

                        <!-- Role Badge - More stylish position and look -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:background="#2C3930"
                            android:elevation="2dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="LEAD"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:translationX="5dp"
                            android:translationY="5dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:text="Aliah Monilar"
                            android:textColor="#2C3930"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lead Developer"
                            android:textColor="#5A6E62"
                            android:textSize="16sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="#AAB99A" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacing="4dp"
                            android:text="Created the core battery optimization algorithm and app architecture."
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Developer 2-->
            <LinearLayout
                android:id="@+id/devtwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/frameradius"
                android:elevation="4dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#2C3930" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <FrameLayout
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:background="@drawable/circleimage"
                            android:clipToOutline="true"
                            android:src="@drawable/devpfp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:background="#2C3930"
                            android:elevation="2dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="UX/UI"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:translationX="5dp"
                            android:translationY="5dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:text="Mary Grace Santiago"
                            android:textColor="#2C3930"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="UI/UX Designer"
                            android:textColor="#5A6E62"
                            android:textSize="16sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="#AAB99A" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacing="4dp"
                            android:text="Designed the elegant interface and created a seamless user experience."
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Developer 3 -->
            <LinearLayout
                android:id="@+id/devthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/frameradius"
                android:elevation="4dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#2C3930" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <FrameLayout
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginEnd="20dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:alpha="0.9"
                            android:background="@drawable/circleimage"
                            android:clipToOutline="true"
                            android:src="@drawable/devpfp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|end"
                            android:background="#2C3930"
                            android:elevation="2dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="5dp"
                            android:text="BACK"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:translationX="5dp"
                            android:translationY="5dp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.05"
                            android:text="Lyca Añora"
                            android:textColor="#2C3930"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Backend Developer"
                            android:textColor="#5A6E62"
                            android:textSize="16sp"
                            android:textStyle="italic" />

                        <View
                            android:layout_width="40dp"
                            android:layout_height="3dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="#AAB99A" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lineSpacing="4dp"
                            android:text="Built the cloud syncing and implemented user authentication systems."
                            android:textColor="#333333"
                            android:textSize="15sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

<!--    bottom section-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F9F2"
        android:elevation="6dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="15dp">

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#2C3930"
            android:elevation="4dp"
            android:letterSpacing="0.1"
            android:text="RETURN TO APP"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="PowerPause © 2025"
            android:textColor="#2C3930"
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>
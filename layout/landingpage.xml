    <!-- App Logo -->
    <ImageView
        android:id="@+id/applogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:src="@drawable/powerpauselogo"
        />

    <!-- App Description Box -->
    <LinearLayout
        android:id="@+id/appdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frameradius"
        android:padding="20dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Charge Smarter, Not Longer"
            android:textColor="#2C3930"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="PowerPause helps you maintain battery health and reduce screen time by restricting app usage while your device is charging."
            android:textColor="#000000"
            android:textSize="14sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Feature Boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:id="@+id/batteryhealth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/frameradius"
            android:padding="15dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/battery_icon"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Battery Health"
                android:textColor="#2C3930"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Extend your battery lifespan"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/digitalwellness"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/frameradius"
            android:padding="15dp"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/time_logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Digital Wellness"
                android:textColor="#2C3930"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Reduce screen addiction"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/getstarted_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#2C3930"
        android:text="get started"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/haveanaccount_button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:background="#802C3930"
        android:text="i already have an account"
        android:textColor="#2C3930"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:text="About PowerPause"
        android:textColor="#2C3930"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>